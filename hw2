#include <sys/types.h>
#include <fcntl.h>
#include <stdio.h>
#include <stdlib.h>
#include <sys/stat.h>
#include <unistd.h>

const int size = 4096;
int main(int argc, char *argv[]) {
    if (argc != 3) {
        printf("Incorrect arguments");
        exit(0);
    }
    
    int fd;
    char buffer[size];
    size_t read_bytes, write_size;
    if ((fd = open(argv[1], O_RDONLY)) < 0) {
        printf("Can't open file\n");
        exit(-1);
    }
    read_bytes = read(fd, buffer, size);
    if (read_bytes == -1) {
        printf("Can't read this file\n");
        exit(-1);
    }
    buffer[read_bytes] = '\0';
    if(close(fd) < 0) {
        printf("Can't close input file\n");
        exit(-1);
    }
    if((fd = open(argv[2], O_WRONLY | O_CREAT, 0666)) < 0) {
        printf("Can\'t open file\n");
        exit(-1);
    }
    write_size = write(fd, buffer, read_bytes + 1);
    if(write_size != read_bytes + 1) {
        printf("Can't write all string\n");
        exit(-1);
    }
 
    if (close(fd) < 0) {
        printf("Can't close output file\n");
    }
    return 0;
}
